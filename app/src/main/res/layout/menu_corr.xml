<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Correo"
        android:id="@+id/textView54"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="40dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnRecibir"
        android:background="@drawable/corrrecibir"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="top|left"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=" Correos\nRecibidos"
        android:id="@+id/textView6"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/btnRecibir"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="25dp"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:id="@+id/btnEnvi"
        android:background="@drawable/correnviar"
        android:layout_gravity="top|left"
        android:layout_alignTop="@+id/btnRecibir"
        android:layout_marginLeft="140dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=" Correos\nEnviados"
        android:id="@+id/textView7"
        android:layout_marginLeft="145dp"
        android:layout_below="@+id/btnRecibir"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="25dp"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/btnRedac"
        android:background="@drawable/corrredactar"
        android:layout_gravity="top|left"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="260dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Redactar\n Correos"
        android:id="@+id/textView8"
        android:layout_marginLeft="265dp"
        android:layout_below="@+id/btnRecibir"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="25dp"/>




</RelativeLayout>